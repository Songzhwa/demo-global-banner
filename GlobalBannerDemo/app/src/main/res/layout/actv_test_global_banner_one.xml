<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button android:id="@+id/btnTestGB"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="page 2" android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView android:id="@+id/ivTestGB"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/wallpaper02" android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toBottomOf="@id/btnTestGB" android:layout_marginTop="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/debug_menu_fragment"
        android:name="ca.six.globalbannerdemo.SomeRightPart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</androidx.drawerlayout.widget.DrawerLayout>